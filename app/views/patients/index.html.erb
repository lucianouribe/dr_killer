<div class="container">
  <h1>Patients</h1>

  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Dying?</th>
        <th>Insurance?</th>
        <th>Symptoms</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.first_name %></td>
          <td><%= patient.last_name %></td>
          <td><%= patient.dying ? 'Yes' : 'No'%></td>
          <td><%= patient.insurance ? 'Yes' : 'No'%></td>
          <td><%= patient.complains_of %></td>
          <td><%= link_to 'Edit', edit_patient_path(patient), class: 'btn' %></td>
          <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?, the patient looks in bad shape!' }, class: 'btn' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
<div class="center">
  <%= link_to 'New Patient', new_patient_path, class: 'btn' %>
</div>
